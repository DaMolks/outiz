<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Outiz.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.Outiz.TextInputLayout.Password" parent="Widget.Outiz.TextInputLayout">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="Widget.Outiz.TextInputLayout.Dense" parent="Widget.Outiz.TextInputLayout">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Widget.Outiz.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Outiz.Body</item>
    </style>

    <style name="TextAppearance.Outiz.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Outiz.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:alpha">0.75</item>
    </style>
</resources>