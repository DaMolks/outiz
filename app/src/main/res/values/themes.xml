<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Outiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Outiz.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Outiz.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Outiz.Body2</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.Outiz.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Outiz.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Outiz.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>
</resources>